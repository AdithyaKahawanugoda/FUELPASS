<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@color/black">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/customer_home_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/white">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/customer_home_tab_item1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Customer Login"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/customer_home_tab_item2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Customer Registration"
           />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/customer_home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/customer_home_tab_layout"/>

</RelativeLayout>